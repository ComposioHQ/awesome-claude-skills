{
  "permissions": {
    "allow": [
      "Bash(git status)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(git fetch*)",
      "Bash(git pull*)",
      "Bash(ls*)",
      "Bash(pwd)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(python3 --version)",
      "Bash(pip install*)",
      "Bash(python3 -m pytest*)",
      "Bash(python3 -m py_compile*)",
      "Bash(playwright install*)"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  }
}
